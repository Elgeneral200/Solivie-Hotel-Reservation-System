# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Enable/Disable emails (True/False)
EMAIL_ENABLED=True

# SMTP Server
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Email Credentials 
# IMPORTANT: Use Gmail App Password, not regular password!
# Follow these steps to get App Password:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate password for "Mail" app
# 4. Copy the 16-character password (e.g., abcd efgh ijkl mnop)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password

# Sender Information
EMAIL_FROM_NAME=Solivie Hotel
EMAIL_FROM=noreply@solivie.com
EMAIL_REPLY_TO=support@solivie.com

# ============================================================================
# ADMIN
# ============================================================================
ADMIN_EMAIL=admin@solivie.com
