  defaultFontName Segoe UI
  defaultFontSize 10
  shadowing true
  shadowingIntensity 25
  backgroundColor #FFFFFF
  roundcorner 8
  
  activity {
    BackgroundColor #FFFFFF
    BorderColor #2C3E50
    BorderThickness 2
    BorderStyle solid
    FontColor #2C3E50
    FontSize 11
    FontStyle normal
    DiamondBackgroundColor #FFFFFF
    DiamondBorderColor #3498DB
    DiamondBorderThickness 2
    DiamondFontColor #2C3E50
    StartColor #3498DB
    StartBorderColor #2C3E50
    EndColor #27AE60
    EndBorderColor #2C3E50
    BarColor #7F8C8D
  }
  
  arrow {
    Color #2C3E50
    Thickness 2
