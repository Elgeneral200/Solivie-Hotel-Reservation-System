@startuml Solivie Hotel Use Case Diagram

skinparam {
  defaultFontName Arial
  defaultFontSize 11
  shadowing false
  linetype ortho
  backgroundColor #FFFFFF
  
  actor {
    BackgroundColor #3498db
    BorderColor #2c3e50
    BorderThickness 2
    FontColor #FFFFFF
    FontStyle bold
    FontSize 12
    StereotypeFontColor #FFFFFF
  }
  
  usecase {
    BackgroundColor #FFFFFF
    BorderColor #7b8a8b
    BorderThickness 1.5
    FontColor #2c3e50
    FontSize 10
    FontStyle normal
  }
  
  package {
    BackgroundColor #f8f9fa
    BorderColor #3498db
    BorderThickness 2
    FontColor #2c3e50
    FontSize 11
    FontStyle bold
    RoundCorner 15
  }
  
  rectangle {
    BackgroundColor #FFFFFF
    BorderColor #2c3e50
    BorderThickness 3
    RoundCorner 20
  }
  
  arrow {
    Color #2c3e50
    FontColor #2c3e50
    FontSize 9
    FontStyle italic
  }
  
  note {
    BackgroundColor #E8F4F8
    BorderColor #3498db
    BorderThickness 1
    FontColor #2c3e50
    FontSize 10
  }
}

left to right direction

title <color:#2C3E50><b>Solivie Hotel Management System - Use Case Diagram</b></color>

actor "Guest User" as Guest <<Guest>>
actor "Registered User" as User <<Customer>>
actor "Admin" as Admin <<Administrator>>
actor "Email Service" as Email <<External>>
actor "Payment Gateway" as Payment <<External>>
actor "System" as System <<System>>

rectangle "**Solivie Hotel Management System**" {
  
  package "<color:#3498DB>Guest Services</color>" {
    usecase "UC-001\nBrowse Rooms" as UC1
    usecase "UC-002\nView Room Details" as UC2
    usecase "UC-003\nRegister Account" as UC3
    usecase "UC-004\nSearch Available Rooms" as UC4
    
    UC1 -[hidden]d- UC2
    UC2 -[hidden]d- UC3
    UC3 -[hidden]d- UC4
  }
  
  package "<color:#2ECC71>User Services</color>" {
    usecase "UC-005\nLogin to System" as UC5
    usecase "UC-006\nView Profile" as UC6
    usecase "UC-007\nEdit Profile" as UC7
    usecase "UC-008\nView Availability Calendar" as UC8
    usecase "UC-009\nAdd to Cart" as UC9
    usecase "UC-010\nView Shopping Cart" as UC10
    
    UC5 -[hidden]d- UC6
    UC6 -[hidden]d- UC7
    UC7 -[hidden]d- UC8
    UC8 -[hidden]d- UC9
    UC9 -[hidden]d- UC10
  }
  
  package "<color:#9B59B6>Booking Services</color>" {
    usecase "UC-011\nComplete Booking" as UC11
    usecase "UC-012\nMake Payment" as UC12
    usecase "UC-013\nView My Bookings" as UC13
    usecase "UC-014\nCancel Booking" as UC14
    usecase "UC-015\nSubmit Review" as UC15
    usecase "UC-016\nDownload Invoice" as UC16
    usecase "UC-017\nView Loyalty Points" as UC17
    
    UC11 -[hidden]d- UC12
    UC12 -[hidden]d- UC13
    UC13 -[hidden]d- UC14
    UC14 -[hidden]d- UC15
    UC15 -[hidden]d- UC16
    UC16 -[hidden]d- UC17
  }
  
  package "<color:#E74C3C>Admin Services</color>" {
    usecase "UC-018\nManage Rooms" as UC18
    usecase "UC-019\nView Dashboard" as UC19
    usecase "UC-020\nView All Bookings" as UC20
    usecase "UC-021\nCheck-In Guest" as UC21
    usecase "UC-022\nManage Users" as UC22
    usecase "UC-023\nGenerate Reports" as UC23
    
    UC18 -[hidden]d- UC19
    UC19 -[hidden]d- UC20
    UC20 -[hidden]d- UC21
    UC21 -[hidden]d- UC22
    UC22 -[hidden]d- UC23
  }
  
  package "<color:#F39C12>System Services</color>" {
    usecase "UC-024\nValidate Availability" as UC24
    usecase "UC-025\nCalculate Pricing" as UC25
    usecase "UC-026\nUpdate Room Status" as UC26
    usecase "UC-027\nProcess Refund" as UC27
    usecase "UC-028\nAward Loyalty Points" as UC28
    usecase "UC-029\nGenerate Invoice" as UC29
    usecase "UC-030\nVerify Identity" as UC30
    
    UC24 -[hidden]d- UC25
    UC25 -[hidden]d- UC26
    UC26 -[hidden]d- UC27
    UC27 -[hidden]d- UC28
    UC28 -[hidden]d- UC29
    UC29 -[hidden]d- UC30
  }
  
  package "<color:#16A085>Email Services</color>" {
    usecase "UC-031\nSend Booking Confirmation" as UC31
    usecase "UC-032\nSend Cancellation Notice" as UC32
    usecase "UC-033\nSend Password Reset" as UC33
    
    UC31 -[hidden]d- UC32
    UC32 -[hidden]d- UC33
  }
}

' Actor connections
Guest --> UC1
Guest --> UC2
Guest --> UC3
Guest --> UC4

User --|> Guest
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10
User --> UC11
User --> UC13
User --> UC14
User --> UC15
User --> UC16
User --> UC17

Admin --|> User
Admin --> UC18
Admin --> UC19
Admin --> UC20
Admin --> UC21
Admin --> UC22
Admin --> UC23

' Include relationships
UC11 ..> UC12 : <<include>>
UC12 ..> UC29 : <<include>>
UC3 ..> UC24 : <<include>>
UC4 ..> UC24 : <<include>>
UC14 ..> UC27 : <<include>>
UC21 ..> UC30 : <<include>>

' Extend relationships
UC11 <.. UC28 : <<extend>>
UC15 <.. UC13 : <<extend>>
UC9 <.. UC4 : <<extend>>

' System actor connections
System --> UC24
System --> UC25
System --> UC26
System --> UC27
System --> UC28
System --> UC29

' External system connections
Payment --> UC12
Email --> UC31
Email --> UC32
Email --> UC33

' Trigger relationships
UC11 ..> UC31 : triggers
UC14 ..> UC32 : triggers

note bottom of Guest
  <b>Guest User</b>
  Can browse without registration
  Limited access to services
end note

note right of User
  <b>Registered User</b>
  Has personalized account
  Can make bookings and manage profile
end note

note right of Admin
  <b>Administrator</b>
  Full system access
  User management & analytics
  Room inventory control
end note

note top of Payment
  <b>Payment Gateway</b>
  Secure payment processing
  PCI-DSS compliant
  Supports multiple payment methods
end note

note top of Email
  <b>Email Service</b>
  Automated notifications
  Transactional emails
  Template-based system
end note

note bottom of System
  <b>System Processes</b>
  Background operations
  Business logic enforcement
  Data validation & processing
end note

legend right
  | Color | Purpose |
  | <color:#3498DB>█</color> | Guest Access |
  | <color:#2ECC71>█</color> | User Services |
  | <color:#9B59B6>█</color> | Booking Management |
  | <color:#E74C3C>█</color> | Admin Controls |
  | <color:#F39C12>█</color> | System Processes |
  | <color:#16A085>█</color> | Communication |
end legend

@enduml